/* pages/index/index.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.xiaotu{
  color: red;
}
.card{
  width: 90%;
  height: 850rpx;
  border-radius: 50rpx;
  background: #fff;
  box-shadow: 0 30rpx 20rpx rgb(240, 240, 240);
  margin-top: 100rpx;
  overflow: hidden;
}

.card_1{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    
}
.des {
  padding-left: 40rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #acacac;
  letter-spacing: 2rpx;
  line-height: 42rpx;
}
.b_notes {
  width: 100%;
  padding: 10rpx;
  display: flex;
  box-sizing: border-box;
}

.b_text {
  width: 94%;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: rgb(238, 238, 238);
  margin-left: 3%;
}


.b_text textarea {
  width: 100%;
  height: 130rpx;
  font-size: 29rpx !important;
  color: #8c9aa8;
  border-spacing: 2rpx;
}

.b_less {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #8c9aa8;
}

.b_bar {
  height: 90rpx;
  width: 90%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 5%;
}

.b_name {
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.b_tips {
  font-size: 26rpx;
  line-height: 45rpx;
  color: #8c9aa8;
  margin-left: 5%;
}

.b_tips text {
  color: rgb(255, 0, 0);
  font-size: 30rpx;
}
.xiadan{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 50rpx;
}
.custom-button{
  width: 60rpx;
  height: 50rpx;
  border-radius: 30rpx;
  background-color: #2d8cf0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.custom-buttonred{
  width: 60rpx;
  height: 50rpx;
  border-radius: 30rpx;
  background-color: red;
  display: flex;
  justify-content: center;
  align-items: center;
}
.slide{
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}